#include <iostream>
#include <conio.h>
#include <math.h>

using namespace std;

main(){
	int i,jml,ta=0,x,xi2=0;
	float rt,d,sdf,r;

	cout<<"Masukan jumlah data = ";cin>>jml;
	int a[jml];

	for(i=0;i<jml;i++){
		cout<<"Masukkan data ke-"<<i+1<<" = ";
		cin>>a[jml];
		ta=ta+a[jml];	
		xi2=xi2+pow(a[jml],2);
	}
	rt=ta/jml;
	x=pow(ta,2);
	r=(jml*xi2-x)/(jml*(jml-1));
	d=sqrt(r);
	cout<<endl;
	cout<<"Rata-rata = "<<rt<<endl;
	cout<<"Varian = "<<r<<endl;
	cout<<"Standar Deviasi = "<<d;

    
	return 0;
}
